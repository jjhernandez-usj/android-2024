<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ActivityD4">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvNameOfClient"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="@string/citizen" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="38dp">

                <ImageView
                    android:id="@+id/ivSoftTyre"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/soft_tyre"
                    app:srcCompat="@drawable/neumaticopirelliblando" />

                <CheckBox
                    android:id="@+id/cbProductOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivMediumTyre"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/medium_tyre"
                    app:srcCompat="@drawable/neumaticopirellimedio" />

                <CheckBox
                    android:id="@+id/cbProductTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_2" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <ImageView
                    android:id="@+id/ivHardTyre"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/hard_tyre"
                    app:srcCompat="@drawable/neumaticopirelliduro" />

                <CheckBox
                    android:id="@+id/cbProductThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_3" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvWeightText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tvweighttext" />

            <TextView
                android:id="@+id/tvWeightValue"
                android:layout_width="50dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvKgText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kg" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>